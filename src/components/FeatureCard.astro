---
import { Icon } from "astro-iconify";

interface Props {
  icon: string;
  title: string;
  text: string;
}

const { icon, title, text } = Astro.props;
---

<div class="w-80 flex flex-col items-center gap-1 text-center">
  <Icon name={icon} class="xl:w-16 md:w-8 text-[#00b2e1]" />
  <h2 class="w-full text-[#00b2e1] xl:text-3xl md:text-2xl font-semibold">
    {title}
  </h2>
  <p class="p-2 xl:text-xl">
    {text}
  </p>
</div>
