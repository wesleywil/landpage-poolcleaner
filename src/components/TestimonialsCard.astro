---
interface Props {
  title: string;
  text: string;
  author: string;
  photo: string;
}

import { Icon } from "astro-iconify";

const { title, text, author, photo } = Astro.props;
---

<div class="w-96 p-2 flex flex-col border rounded">
  <div>
    <Icon name="gridicons:quote" class="w-12" />
    <div class="flex flex-col gap-2">
      <h2 class="text-xl">{title}</h2>
      <p class="text-sm text-slate-200">{text}</p>
    </div>
  </div>
  <div class="mt-2 flex gap-2 items-center">
    <img src={photo} alt="user" class="w-12 rounded-full" />
    <h3>{author}</h3>
  </div>
</div>
