---
interface Props {
  title: string;
  text: string;
  author: string;
  photo: string;
}

import { Icon } from "astro-iconify";

const { title, text, author, photo } = Astro.props;
---

<div
  class="p-2 flex flex-col justify-between bg-[#e2e4ec] text-[#283137] border shadow-sm rounded"
>
  <div>
    <Icon name="gridicons:quote" class="w-12 text-[#00b2e1]" />
    <div class="flex flex-col gap-2">
      <h2 class="text-2xl font-bold">{title}</h2>
      <p class="text-slate-900">{text}</p>
    </div>
  </div>
  <div class="mt-2 flex gap-2 items-center">
    <img src={photo} alt="user" class="w-12 rounded-full" />
    <h3 class="font-semibold">{author}</h3>
  </div>
</div>
