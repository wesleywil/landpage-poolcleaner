---
import { Icon } from "astro-iconify";

interface Props {
  icon: string;
  title: string;
  text: string;
}

const { icon, title, text } = Astro.props;
---

<div class="w-96 p-2 flex flex-col gap-2 items-center text-center">
  <Icon name={icon} class="w-16 text-[#00b2e1]" />
  <h1 class="w-full text-[#00b2e1] text-2xl font-semibold">{title}</h1>
  <p class="p-2 font-semibold">
    {text}
  </p>
</div>
