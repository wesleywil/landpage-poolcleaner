---
import FeatureCard from "../components/FeatureCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="overflow-hidden">
    <!-- Hero, Headlines -->
    <section
      style="background-image: url('/hero_image.webp');"
      class="w-screen h-screen text-5xl font-bold text-white"
    >
      <div
        class="w-full h-full flex flex-col gap-2 justify-center items-center bg-gray-900/70"
      >
        <h1>Dive into Crystal Clear Waters</h1>
        <h2 class="text-xl font-semibold">
          Professional Pool Cleaning Services for a Sparkling, Hassle-Free Oasis
        </h2>
        <button
          class="mt-4 px-2 py-1 bg-red-500 hover:bg-red-800 text-base font-base rounded transform duration-500 ease-in-out"
          >Book Your Refreshing Clean</button
        >
      </div>
    </section>
    <!--  -->
    <section class="w-screen h-screen p-2 font-bold text-white">
      <h1 class="text-3xl text-center">Features</h1>
      <div class="mt-2 flex md:flex-wrap justify-center gap-4">
        <FeatureCard
          title="Spotless Maintenance"
          text="Regular cleaning to keep your pool crystal clear"
        />
        <FeatureCard
          title="Expert Technicians"
          text="Trained professionals ensuring thorough care."
        />
        <FeatureCard
          title="Tailored Services"
          text="Customized plans to suit your pool's unique needs."
        />
        <FeatureCard
          title="Eco-Friendly Solutions"
          text="Environmentally conscious cleaning practices"
        />
      </div>
    </section>
  </main>
</Layout>

