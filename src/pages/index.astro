---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="overflow-hidden">
    <!-- Hero, Headlines -->
    <section
      style="background-image: url('/hero_image.webp');"
      class="w-screen h-screen text-5xl font-bold text-white"
    >
      <div
        class="w-full h-full flex flex-col gap-2 justify-center items-center bg-gray-900/70"
      >
        <h1>Dive into Crystal Clear Waters</h1>
        <h2 class="text-xl font-semibold">
          Professional Pool Cleaning Services for a Sparkling, Hassle-Free Oasis
        </h2>
        <button
          class="mt-4 px-2 py-1 bg-red-500 hover:bg-red-800 text-base font-base rounded transform duration-500 ease-in-out"
          >Book Your Refreshing Clean</button
        >
      </div>
    </section>
    <!--  -->
    <section class="w-screen h-screen p-2 font-bold text-white">
      <h1 class="text-3xl text-center">Features</h1>
      <div class="flex justify-center gap-4">
        <div class="p-2 border">
          <h2 class="text-xl">Spotless Maintenance</h2>
          <p class="text-sm">
            Regular cleaning to keep your pool crystal clear
          </p>
        </div>
        <div>
          <h2>Expert Technicians</h2>
          <p></p>
        </div>
        <div>
          <h2>Tailored Services</h2>

          <p></p>
        </div>
        <div>
          <h2>Eco-Friendly Solutions</h2>
          <p></p>
        </div>
      </div>
    </section>
  </main>
</Layout>

