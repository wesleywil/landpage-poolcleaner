---
import ButtonScrollTop from "../../components/ButtonScrollTop.astro";

import FooterSocials from "../../components/FooterSocials.astro";
---

<footer
  class="w-screen h-72 p-2 pb-4 text-[#e2e4ec] bg-fixed"
  style="background-image: url('/footer.webp'); background-size:cover;"
>
  <div
    class="h-full self-center flex flex-col items-center justify-center gap-2"
  >
    <FooterSocials />
    <button
      class="mt-4 p-2 bg-[#00b2e1] hover:bg-[#e2e4ec] hover:text-[#283137] text-xl font-bold rounded transform duration-500 ease-in-out"
      >Revitalize Your Pool Today</button
    >
    <ButtonScrollTop />
  </div>
</footer>
